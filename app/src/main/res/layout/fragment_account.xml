<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AccountFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal">

        <!-- Hình ảnh người dùng - chỉ hiển thị icon -->
        <ImageView
            android:id="@+id/userImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/User_icon"
            android:layout_marginBottom="16dp"
            android:scaleType="centerCrop"
            android:contentDescription="User Image" />

        <!-- Tên người dùng -->
        <TextView
            android:id="@+id/userNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name: "
            android:textColor="@color/xanhduong"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginBottom="8dp" />

        <!-- Tên đăng nhập -->
        <TextView
            android:id="@+id/userUsernameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username: "
            android:textStyle="bold"
            android:textColor="@color/xanhduong"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Email -->
        <TextView
            android:id="@+id/userEmailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: "
            android:textStyle="bold"
            android:textColor="@color/xanhduong"
            android:textSize="16sp"
            android:layout_marginBottom="8dp" />

        <!-- Số điện thoại -->
        <TextView
            android:id="@+id/userPhoneTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phone: "
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/xanhduong"
            android:layout_marginBottom="16dp" />

        <!-- Nút Logout -->
        <Button
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:backgroundTint="@color/xanh"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- Nút Recurring Expense -->
        <Button
            android:id="@+id/recurringExpenseButton"
            android:layout_width="wrap_content"
            android:backgroundTint="@color/xanh"
            android:layout_height="wrap_content"
            android:text="Recurring Expense" />
    </LinearLayout>
</FrameLayout>
